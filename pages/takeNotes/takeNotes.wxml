<!--pages/takeNotes/takeNotes.wxml-->
<view class="container">
 <swiper
   indicator-dots="{{indicatorDots}}" 
   indicator-color="rgba(0, 0, 0, .2)" 
   indicator-active-color="#fff" 
   duration="{{duration}}"
   style='width:93%;height:240px;margin:0 auto;'>
   <block wx:for="{{imageList}}" wx:key="*this" wx:if="{{imageList.length>0}}">
      <swiper-item>
        <image class="swiper-item" src='{{item}}' bindtap='chioceImage'  mode="aspectFill"></image>
      </swiper-item>
   </block>
  </swiper>

  <view class='date'>
    <text>{{todayDate}}</text>
    <image class='write-icon' src="../../images/wenben.png"></image>
  </view>

  <form bindsubmit="saveNotes">
    <view class='title'>
      <input class='title-input' placeholder='标题' name="title" value="{{title}}"></input>
    </view>
    <view class='content'>
      <textarea placeholder='请输入正文' name="content" value="{{content}}"></textarea>
    </view>
    <button class='save' form-type="submit">保存</button>
  </form>


  
</view>