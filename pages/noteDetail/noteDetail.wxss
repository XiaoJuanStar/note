/* pages/noteDetail/noteDetail.wxss */
.detail{
  width: 94%;
  margin: 0 auto;
}
.date{
  color: #b8b8b8;
  font-size: 24rpx;
  margin: 10rpx 0 30rpx 0;
}
.title{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.content{
  font-size: 28rpx;
  color: #353535;
  margin: 30rpx 0;
}
.location{
  font-size: 24rpx;
  color: #b8b8b8;
}
.footer{
  position: fixed;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fafafa;
  color: #b8b8b8;
  bottom:0;
}
.footer-item{
  width: 50%;
  font-size: 26rpx;
  display: inline-block;
  text-align: center;
}
.footer-item-image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}